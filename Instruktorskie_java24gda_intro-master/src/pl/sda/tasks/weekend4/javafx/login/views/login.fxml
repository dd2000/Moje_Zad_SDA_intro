<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.Separator?>
<GridPane hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="pl.sda.tasks.weekend4.javafx.login.controllers.LoginController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <children>
      <Text fx:id="info" GridPane.rowIndex="0" />
      <TextField fx:id="username" GridPane.rowIndex="1"/>
      <PasswordField fx:id="password" GridPane.rowIndex="2"/>
      <Separator GridPane.rowIndex="3"/>
      <Button fx:id="button" text="Login" GridPane.rowIndex="4" />
      <Text fx:id="message" GridPane.rowIndex="5" />
   </children>
</GridPane>
